<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShellNavigationDemo.MainPage">

    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        <Label
                    Text="Trees"
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="32"
                    HorizontalOptions="Center" />
        <Button
                x:Name="btnEverGreen"
                Text="Evergreen trees"
                SemanticProperties.Hint="Look at evergreen trees"
                HorizontalOptions="Center" />

        <Button
                x:Name="btnDeciduous"
                Text="Deciduous trees"
                SemanticProperties.Hint="Look at deciduous trees"
                HorizontalOptions="Center" />

        <Button 
                x:Name="btnOak"
                Text="Just show me Oak"
                HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>
