<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShellFlyoutDemo.Pages.NativeTrees"
             Title="NativeTrees">
    <ScrollView>
        <VerticalStackLayout
            Margin="20"
            Spacing="30">

            <Label 
                Text="Native Deciduous trees"
                FontSize="28"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Label Text="Quercus petraea"
                   FontSize="24"
                   FontAttributes="Italic,Bold"
                   HorizontalOptions="Start"/>
            <Image Source="quercus_petraea.jpg"
                   WidthRequest="400"
                   HeightRequest="400"
                   VerticalOptions="Start"
                   HorizontalOptions="Start"/>

            <Label Text="Commonly known as the Irish oak, sessile oak, Cornish oak or durmast oak, is a species of oak tree native to most of Europe and into Anatolia and Iran. The sessile oak is the national tree of Ireland, and an unofficial emblem in Wales and Cornwall."
                   FontSize="20"
                   VerticalOptions="Start"
                   HorizontalOptions="Start"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>