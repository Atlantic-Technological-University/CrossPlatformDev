<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavPageDemo.RootPage"
             Title="RootPage">
    <!--Style the navigation page-->
    <VerticalStackLayout
        Padding="10"
        Spacing="40"
        VerticalOptions="Center">

        <Label Text="This is the root page of our app"
           TextColor="Black"
           FontSize="18"
           HorizontalOptions="Center" />

        <Button x:Name="btnNavigateToNext"
                Text="Navigate to next page"
                HorizontalOptions="Center" />

    </VerticalStackLayout>
    
</ContentPage>