<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavPageDemo.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout
         Padding="10"
        Spacing="40"
        VerticalOptions="Center">
        <Label 
            x:Name="PageLabel"
            Text="Welcome to new page 1"
            TextColor="Black"
            FontSize="18"
            HorizontalOptions="Center" />

        <Button x:Name="btnNavigateToNext"
                Text="Navigate to next page"
                HorizontalOptions="Center" />
        
        <Button x:Name="btnNavigateToPrevious"
        Text="Navigate to previous page"
        HorizontalOptions="Center" />

        <Button x:Name="btnNavigateToRoot"
        Text="Navigate to the root page"
        HorizontalOptions="Center" />

        <Button x:Name="btnRemovePage"
        Text="Remove the previous page"
        HorizontalOptions="Center"
        IsEnabled="False"/>


    </VerticalStackLayout>
</ContentPage>