<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FlyoutPageNavDemo"
             x:Class="FlyoutPageNavDemo.FlyoutPageNavigation"
             Title="FlyoutPageNavigation"
            BackgroundColor="#80391e"
            >
    <!-- FlyoutLayoutBehavior="Popover"-->
    <FlyoutPage.Flyout>
        <local:FlyMenuPage x:Name="flyoutMenu"/>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:MainPage/>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
    
    
</FlyoutPage>