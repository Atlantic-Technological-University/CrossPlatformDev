<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMAUIApp.Dialer">
    <VerticalStackLayout
        Spacing="15"
        Padding="20">

        <Label Text="Enter a phone number"
               FontSize="20"/>

        <Entry x:Name="PhoneNumberText"
               Text="0800-CROSSPLATFORM"/>

        <Button x:Name="TranslateButton"
                Text="Translate"
                Clicked="TranslateButton_Clicked"/>

        <Button x:Name="CallButton"
                Text="Call"
                IsEnabled="False"
                Clicked="CallButton_Clicked"/>


    </VerticalStackLayout>
</ContentPage>